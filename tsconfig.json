{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "app",
    "domain",
    "infra",
    "ui",
    "tests",
    "scripts/*.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "tests",
    "**/*.test.ts"
  ]
}